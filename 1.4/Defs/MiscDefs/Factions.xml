<Defs>
  <!--imperium romanum-->
  <FactionDef ParentName="FactionBase">
    <defName>AR_Faction_Rome</defName>
    <label>Rome</label>
    <description>These people have lived here for a millennium. They think to be the first and only true civilization on this world and believe that it is their duty to bring their civilization to other people. Normally they work with simple mechanical tools and fight with equally simple mechanical weapons. But when simple doesn't cut it, they're able to construct complicate mechanical devices. They have great armies and gifted diplomats. They mostly worship a multitude of gods.</description>
    <pawnsPlural>romans</pawnsPlural>
    <pawnSingular>roman</pawnSingular>
    <listOrderPriority>30</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>imperator</leaderTitle>
    <factionIconPath>Icon/Lupa</factionIconPath>
    <colorSpectrum>
      <li>(255,235,122)</li>
      <li>(180,173,150)</li>
      <li>(183,122,61)</li>
    </colorSpectrum>
    <factionNameMaker>NamerFactionRome</factionNameMaker>
    <settlementNameMaker>NamerSettlementRome</settlementNameMaker>
    <techLevel>Medieval</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>0.75</commonality>
      </li>
      <li>
        <categories>
          <li>Tribal</li>
        </categories>
        <commonality>0.25</commonality>
      </li>
    </backstoryFilters>
    <allowedCultures>
      <li>Romulus</li>
    </allowedCultures>
    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-5</min>
      <max>55</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <AR_Citizen>100</AR_Citizen>
          <AR_Councilman>10</AR_Councilman>
          <AR_Sagittarius>20</AR_Sagittarius>
          <AR_Hastatus>20</AR_Hastatus>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <AR_Citizen>50</AR_Citizen>
          <AR_Hastatus>250</AR_Hastatus>
          <AR_Councilman>50</AR_Councilman>
          <AR_Sagittarius>250</AR_Sagittarius>
          <AR_Triarius>250</AR_Triarius>
          <AR_General>50</AR_General>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <AR_Citizen>100</AR_Citizen>
          <AR_Councilman>50</AR_Councilman>
          <AR_Preatorian>200</AR_Preatorian>
          <AR_Legionary>250</AR_Legionary>
          <AR_Centurion>50</AR_Centurion>
          <AR_General>50</AR_General>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <AR_Trader>1</AR_Trader>
        </traders>
        <carriers>
          <Muffalo>5</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>2</Elephant>
        </carriers>
        <guards>
          <AR_Citizen>100</AR_Citizen>
          <AR_Councilman>50</AR_Councilman>
          <AR_Hastatus>250</AR_Hastatus>
          <AR_Sagittarius>250</AR_Sagittarius>
          <AR_Triarius>250</AR_Triarius>
          <AR_Preatorian>200</AR_Preatorian>
          <AR_Centurion>100</AR_Centurion>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <AR_Citizen>500</AR_Citizen>
          <AR_Preatorian>250</AR_Preatorian>
          <AR_Hastatus>50</AR_Hastatus>
          <AR_Councilman>50</AR_Councilman>
          <AR_Sagittarius>50</AR_Sagittarius>
          <AR_Triarius>50</AR_Triarius>
